<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ctm_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Title"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/ctm_imgae_imageView"
        app:layout_constraintTop_toBottomOf="@+id/ctm_imgae_imageView" />

    <TextView
        android:id="@+id/ctm_day_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Day"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/ctm_imgae_imageView"
        app:layout_constraintTop_toBottomOf="@+id/ctm_imgae_imageView" />

    <ImageView
        android:id="@+id/ctm_imgae_imageView"
        android:layout_width="619dp"
        android:layout_height="363dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>